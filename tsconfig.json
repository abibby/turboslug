{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "target": "esnext",
        "baseUrl": "./",
        "jsx": "preserve",
        // "jsx": "react",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "paths": {
            "*": ["types/*", "src/*"]
        },
        "experimentalDecorators": true,
        "pretty": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "module": "ES2022"
    },
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}
