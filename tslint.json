{
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "rules": {
        "semicolon": [
            true,
            "never"
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "jsx-wrap-multiline": false,
        "jsx-alignment": true,
        "jsx-no-multiline-js": false,
        "jsx-boolean-value": false,
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "object-literal-sort-keys": false,
        "object-literal-shorthand": [
            true,
            "never"
        ],
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always"
            }
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-snake-case",
            "allow-pascal-case",
            "allow-leading-underscore"
        ]
    }
}